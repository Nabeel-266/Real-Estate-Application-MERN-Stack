<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NAB Real Estate</title>
    <link rel="icon" type="image/png" href="/assets/favicon.png" />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates:wght@200;300;400;500;600;700;800;900&family=Quicksand:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <!-- Styles -->
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      html {
        font-size: 10px;
      }
      body {
        font-family: "Montserrat Alternates", sans-serif;
      }
      .container-main {
        width: 100%;
        min-height: 100dvh;
        display: flex;
        flex-direction: column;
        justify-content: start;
        align-items: start;
        background: white;
        color: #303030;
      }
      .container-top {
        width: 100%;
        min-height: 10rem;
        display: flex;
        flex-direction: column;
        justify-content: end;
        align-items: start;
        padding: 2rem 4% 3rem 4%;
        /* background-color: #082835; */
      }
      .container-top img {
        width: 23rem;
        margin-left: 0.7%;
        margin-bottom: 3rem;
      }
      .container-top h1 {
        width: 100%;
        font-size: 2.8rem;
        line-height: 4.5rem;
        font-weight: 600;
        margin-bottom: 2rem;
        color: #082835;
        border-bottom: 0.2rem solid #bbb;
        padding: 0rem 1%;
      }
      .container-top h3 {
        font-size: 2.1rem;
        line-height: 3rem;
        font-weight: 700;
        font-family: "Quicksand", sans-serif;
        padding: 0rem 1%;
      }
      .container-top p {
        font-size: 1.8rem;
        line-height: 1.9rem;
        font-weight: bold;
        letter-spacing: 0.05rem;
        color: #505050;
        font-family: "Quicksand", sans-serif;
        padding: 0rem 1%;
      }
      .container-bottom {
        width: 100%;
        max-width: 60rem;
        padding: 0rem 5%;
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }
      .email-cont,
      .otp-cont {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      .otp-cont {
        display: none;
      }
      .email,
      .otp-code {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      .email span,
      .otp-code span {
        font-size: 1.8rem;
        line-height: 1.8rem;
        font-weight: 600;
        color: #082835;
      }
      .email input,
      .otp-code input {
        width: 100%;
        outline: none;
        border: 2px solid #a0a0a0;
        border-radius: 0.4rem;
        padding: 0.8rem 1rem;
        font-size: 1.8rem;
        line-height: 1.8rem;
        font-weight: 500;
        color: #505050;
        font-family: "Montserrat Alternates", sans-serif;
      }
      .email input:focus,
      .otp-code input:focus {
        border-color: #082835;
      }

      .button {
        all: unset;
        font-size: 2rem;
        font-weight: 600;
        text-align: center;
        padding: 1rem 1rem;
        color: white;
        background-color: #082835;
        margin-bottom: 1rem;
        text-decoration: none;
        border-radius: 100rem;
        cursor: pointer;
        transition: all 0.1s linear;
      }
      .button:hover {
        transform: scale(1.02);
        box-shadow: 10px 10px 20px #eee;
      }
      .button:disabled {
        background-color: #bbb;
        color: #333;
        cursor: not-allowed;
      }
      .response-message {
        font-size: 1.7rem;
        font-weight: 600;
        display: none;
      }
      .server-error {
        color: #990000;
        font-size: 1.7rem;
        font-weight: 600;
        display: none;
      }
      .error {
        color: #cf0000;
        font-size: 1.5rem;
        font-weight: 500;
      }

      /* --> Responsive Screen <-- */
      @media (max-width: 375px) {
        html {
          font-size: 7.6px;
        }
      }
      @media (376px <= width <= 479px) {
        html {
          font-size: 7.8px;
        }
      }
      @media (480px <= width <= 639px) {
        html {
          font-size: 8.2px;
        }
      }
      @media (640px <= width <= 767px) {
        html {
          font-size: 8.6px;
        }
      }
      @media (768px <= width <= 900px) {
        html {
          font-size: 9px;
        }
      }
      @media (901px <= width <= 1023px) {
        html {
          font-size: 8.8px;
        }
      }
      @media (1024px <= width <= 1200px) {
        html {
          font-size: 9.4px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container-main">
      <div class="container-top">
        <img src="/assets/logo-dark.png" alt="NabEstateLogo" />
        <h1>Change Email</h1>
        <h3>Dear <%= name%>,</h3>
        <p>Your current email is <%= email%></p>
      </div>

      <div class="container-bottom">
        <p id="serverError" class="server-error"></p>

        <div id="emailCont" class="email-cont">
          <label for="email" class="email">
            <span>Enter New Email Address</span>
            <input
              type="email"
              id="email"
              autocomplete="off"
              oninput="emailInputHandler()"
              required
            />
            <div id="emailError" class="error"></div>
          </label>

          <button id="sendCodeBtn" class="button" disabled>
            Send Verification Code
          </button>
        </div>

        <p id="responseMessage" class="response-message"></p>

        <div id="otpCont" class="otp-cont">
          <label for="otp" class="otp-code">
            <span>Enter OTP Code</span>
            <input
              type="text"
              id="otp"
              autocomplete="off"
              oninput="otpInputHandler()"
              maxlength="6"
              required
            />
            <div id="otpError" class="error"></div>
          </label>

          <button id="verifyCodeBtn" class="button" disabled>
            Verify Code & Change Email
          </button>
        </div>
      </div>
    </div>

    <script>
      const userCurrentEmail = "<%= email %>";
      const userId = "<%= id %>";
      const token = "<%= token %>";
      let otpCode;
      let otpCodeExpiry;

      function emailInputHandler() {
        const email = document.getElementById("email");

        if (email.value.trim() !== "") {
          document.getElementById("sendCodeBtn").disabled = false;
        } else {
          document.getElementById("sendCodeBtn").disabled = true;
        }

        document.getElementById("emailError").innerText = "";
        document.getElementById("serverError").style.display = "none";
        document.getElementById("serverError").innerText = "";
      }

      function otpInputHandler(e) {
        const otp = document.getElementById("otp");

        if (otp.value.length === 6) {
          document.getElementById("verifyCodeBtn").disabled = false;
        } else {
          document.getElementById("verifyCodeBtn").disabled = true;
        }
        document.getElementById("otpError").innerText = "";
        document.getElementById("serverError").style.display = "none";
        document.getElementById("serverError").innerText = "";
      }

      document
        .getElementById("sendCodeBtn")
        .addEventListener("click", sendChangeEmailVerifyCodeHandler);

      document
        .getElementById("verifyCodeBtn")
        .addEventListener("click", verifyChangeEmailVerifyCodeHandler);

      function sendChangeEmailVerifyCodeHandler() {
        const email = document.getElementById("email").value;

        let emailError = "";

        const emailRegex =
          /^(?:[^@\s]+@(?:gmail\.com|hotmail\.com|yahoo\.com|outlook\.com|zoho\.com|icloud\.com|protonmail\.com|aol\.com))$/;

        // Check Email Address is valid
        if (!emailRegex.test(email)) {
          emailError = "Your email is invalid";
        }

        // Check new email is not same as current email
        else if (email === userCurrentEmail) {
          emailError = "Your new email is same as current email!";
        }

        document.getElementById("emailError").innerText = emailError;

        if (!emailError) {
          fetch(`/api/auth/sendChangeEmailOTP`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              userId,
              email: email.trim(),
            }),
          })
            .then((response) => response.json())
            .then((data) => {
              console.log(data);
              if (data?.status === "Success") {
                otpCode = data?.result.otp;
                otpCodeExpiry = data?.result.otpExpiry;
                document.getElementById("email").readOnly = true;
                document.getElementById("sendCodeBtn").style.display = "none";
                document.getElementById("otpCont").style.display = "block";
                document.getElementById("responseMessage").style.display =
                  "block";
                document.getElementById("responseMessage").innerText =
                  data?.message;
              } else {
                document.getElementById("serverError").style.display = "block";
                document.getElementById("serverError").innerText =
                  data?.message;
              }
            })
            .catch((error) => {
              console.error("Error:", error.message);
              document.getElementById("serverError").style.display = "block";
              document.getElementById("serverError").innerText =
                "An error occurred while sending a OTP to an email from server, Something went wrong 🔴.";
            });
        }
      }

      function verifyChangeEmailVerifyCodeHandler() {
        const enteredOTP = document.getElementById("otp").value;
        const newEmail = document.getElementById("email").value;

        let otpError = "";

        // Check OTP Code is valid
        if (enteredOTP.length !== 6) {
          otpError = "OTP Code must be 6-digit number.";
        }

        // Check OTP Code Expiry
        else if (Date.now() > otpCodeExpiry) {
          otpError = "OTP Code has been expired!";
        }

        document.getElementById("otpError").innerText = otpError;

        if (!otpError) {
          fetch(`/api/auth/verifyChangeEmailOTP/${userId}/${token}`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              newEmail,
              enteredOTP,
              otp: otpCode,
              otpExpiry: otpCodeExpiry,
            }),
          })
            .then((response) => response.json())
            .then((data) => {
              if (data?.status !== "Success") {
                document.getElementById("serverError").style.display = "block";
                document.getElementById("serverError").innerText =
                  data?.message;
              }
            })
            .catch((error) => {
              console.error("Error:", error.message);
              window.location.reload();
            });
        }
      }
    </script>
  </body>
</html>
